<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<template id="report_purchaseorder_document_cluster" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='row']" position="replace">
                <div class="col-2 flex-end document-headers company-border-color">
                    <h5 class="company-color">Supplier</h5>
                    <h1>Purchase Order</h1>
                </div>
                <div class="col-2 flex-center document-info">
                    <div class="supplier-info">
                        <div t-if="o.dest_address_id">
                            <div t-field="o.dest_address_id" 
                                 t-field-options='{"widget": "contact", "fields": ["address", "name", "email"], "no_marker": true}'/>
                        </div>
                        <div t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "email"], "no_marker": true}'/>
                        </div>
                    </div>
                    <table>
                        <tr>
                            <td class="company-color">Invoice No</td>
                            <td>:</td>
                            <td><span t-field="o.name"/></td>
                        </tr>
                        <tr>
                            <td class="company-color">Invoice Date</td>
                            <td>:</td>
                            <td><span t-field="o.date_order" t-field-options='{"format": "d/m/y"}'/></td>
                        </tr>
                        <tr>
                            <td class="company-color">Account No</td>
                            <td>:</td>
                            <td></td>
                        </tr>
                    </table>
                </div>
                <div class="total">
                    <table class="company-bg-color">
                        <tr>
                            <td>TOTAL DUE</td>
                            <td>:</td>
                            <td><span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
                        </tr>
                    </table>
                </div>
            </xpath>
            <xpath expr="//div/h2" position="replace" />
            <xpath expr="//div[@class='row mt32 mb32']" position="replace"></xpath>
            <xpath expr="//div/p" position="replace">
            <div class="col-2">
                <div class="notes">
                    <h5>TERMS / CONDITIONS</h5>
                    <p t-field="o.notes"/>
                </div>
                <h5><span t-field="user.signature"/></h5>
            </div>
        </xpath>
        </template>
    </data>
</openerp>